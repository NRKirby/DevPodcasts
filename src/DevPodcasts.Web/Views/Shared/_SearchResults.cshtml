@model IEnumerable<DevPodcasts.ViewModels.Podcast.PodcastSearchResultViewModel>

<div id="results-container">
    @if (Model != null)
    {
        <hr />
        foreach (var result in Model)
        {
            <div class="row result-row" id="@result.Id">
                <div class="col-sm-2 hidden-xs">
                    <img class="result-img" src="@result.ImageUrl" title="@result.Title"/>
                </div>
                <div class="col-sm-10">
                    <h3 title="@result.Title">@result.Title</h3>
                    <p title="@result.Title">@result.Description</p>
                    <div class="row">
                        <div class="podcast-tag-list col-sm-10">
                            @if (result.Tags != null)
                            {
                                foreach (var tag in result.Tags)
                                {
                                    <a href="~/tags/@tag.Slug" class="podcast-tag" title="Podcasts tagged @tag.Name">@tag.Name</a>
                                }
                            }
                        </div>
                        <div class="col-sm-2"><p class="pull-right" title="@result.Title"><span class="result-episode-count">@result.NumberOfEpisodes episodes</span></p></div>
                    </div>
                </div>
            </div>
            <hr />
        }
    }
</div>

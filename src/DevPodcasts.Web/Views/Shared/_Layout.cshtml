@using Microsoft.AspNet.Identity
@{
    string searchQuery = ViewBag.SearchQuery;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    @if (ViewBag.MetaDescriptionText == null || ViewBag.MetaDescriptionText == string.Empty)
    {
        <meta name="description" content="Find software-related podcasts. We list over 100 podcasts and over 11,000 episodes which will interest all kinds of software developers and software engineers.">
    }
    else
    {
        <meta name="description" content="@ViewBag.MetaDescriptionText">
    }
    
    <meta name="keywords" content="software developer podcasts, software development podcasts, sofware engineering podcasts, javascript podcasts, python podcasts, java podcasts, .net podcasts, c++ podcasts, angular podcasts, dev podcasts, developer podcasts, software podcasts">

    <title>Dev Podcasts | @ViewBag.Title</title>

    <link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet">
    @Styles.Render("~/Content/css")
    <link href="~/Content/Site.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    <link rel="shortcut icon" href="~/favicon.png" type="image/png">
    <link rel="icon" href="~/favicon.png" type="image/png">
    <link href="~/Content/font-awesome.css" rel="stylesheet" />

    <script>
        (function (i, s, o, g, r, a, m) {

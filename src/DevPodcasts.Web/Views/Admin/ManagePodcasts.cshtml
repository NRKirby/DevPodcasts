@model DevPodcasts.ViewModels.Admin.AdminManagePodcastsViewModel
@{
    ViewBag.Title = "Manage Podcasts";
}

<h2>Manage Podcasts</h2>

<table id="manage-podcasts-table" class="table table-striped">
    <thead> 
    <tr>
        <th>Title</th>
    </tr> 
    </thead> 
    <tbody>
    @if (Model?.Items != null)
    {
        foreach (var item in Model.Items)
        {
            <tr>
                <td>@Html.ActionLink(item.Title, "Edit", "Podcasts", new { id = item.Id }, null)</td>
            </tr>
        }
    }
    </tbody>
</table>


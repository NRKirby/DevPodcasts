@model DevPodcasts.ViewModels.Home.HomeIndexViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Dev Podcasts</h1>
    <p class="lead">Directory for software-related podcasts.</p>
    <p>@Model.TotalPodcasts podcasts listed</p>
</div>

<h2>Featured podcasts:</h2>
<div class="row">
    @foreach (var pick in Model.FeaturedPodcasts)
    {
        <div class="col-md-5">
            <h3>@pick.Title</h3>
            <p>@pick.Description
            </p>
        <p><a href="@Url.Action("Detail", "Podcast", new { Id = pick.PodcastId })" class="btn btn-default">More &raquo;</a></p>
        </div>    
    }
</div>
@model DevPodcasts.ViewModels.Admin.ReviewPodcastViewModel
@{
    ViewBag.Title = "ReviewPodcast";
}

<h2>Review Podcast</h2>

@using (Html.BeginForm("ReviewSubmission", "Admin", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Id)
    <div class="row">
        <strong>Title:</strong> @Html.DisplayFor(m => m.Title)
    </div>
    <div class="row">
        <strong>Website:</strong> <a href="@Model.SiteUrl" rel="noopener noreferrer" target="_blank">@Model.SiteUrl</a>
    </div>
    <div>
        <h4>Categories</h4>
    </div>
    <div>
        @Html.EditorFor(m => m.Categories)
    </div>
    <input type="submit" value="Save" />
}



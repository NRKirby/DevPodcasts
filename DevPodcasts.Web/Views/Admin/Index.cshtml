@model DevPodcasts.ViewModels.Admin.AdminIndexViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Admin</h2>
@using (Html.BeginForm("Index", "Admin", FormMethod.Post))
{
    <button type="submit" class="btn btn-primary pull-right">Save</button>
    <table class="table table-striped">
        <thead> 
        <tr>
            <th>Title</th>
            <th>Site Url</th>
            <th>Date added</th>
            <th></th>
        </tr> 
        </thead> 
        <tbody>
        @if (Model != null && Model.UnapprovedPodcasts != null)
        {
            foreach (var item in Model.UnapprovedPodcasts)
            {
                <tr> 
                    <td>@item.Title</td> 
                    <td>@item.SiteUrl</td> 
                    <td>@item.DateAdded</td> 
                    <td>
                        <a href="@Url.Action("ReviewSubmission", "Admin", new { podcastId = @item.Id })"><i class="fa fa-pencil-square-o" aria-hidden="true" title="Review submission"></i></a>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
}






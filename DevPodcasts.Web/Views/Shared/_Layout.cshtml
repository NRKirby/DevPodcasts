@{
    string searchQuery = ViewBag.SearchQuery;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="description" content="Find software developer podcasts">
    <meta name="keywords" content="software developer podcasts, software development podcasts, sofware engineering podcasts, javascript podcasts, python podcasts, java podcasts, .net podcasts, c++ podcasts, angular podcasts, dev podcasts, developer podcasts, software podcasts">

    <title>@ViewBag.Title - Dev Podcasts</title>
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700" rel="stylesheet">
    @Styles.Render("~/Content/css")
    <link href="~/Content/Site.css" rel="stylesheet" /> @*TODO - this stylesheet isn't working from BundleConfig? *@
    @Scripts.Render("~/bundles/modernizr")

    <link rel="shortcut icon" href="~/favicon.png" type="image/png">
    <link rel="icon" href="~/favicon.png" type="image/png">
    <link href="~/Content/font-awesome.css" rel="stylesheet" />

    <script>
        (function (i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
            (i[r].q = i[r].q || []).push(arguments)
        }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-63521630-3', 'auto');
        ga('send', 'pageview');
    </script>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dev Podcasts", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", title = "Home page" })
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Podcasts", "Index", "Podcast")</li>
                    <li>@Html.ActionLink("Submit a podcast", "Submit", "Podcast")</li>
                    @if (ViewContext.HttpContext.User.IsInRole("Admin"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Manage submissions", "Index", "Admin")</li>
                                <li>@Html.ActionLink("Manage podcasts", "ManagePodcasts", "Admin")</li>
                            </ul>
                        </li>
                    }
                </ul>
                <div class="col-sm-3 col-md-3 navbar-right">
                    @using (Html.BeginForm("Index", "Search", FormMethod.Get, new { @class = "navbar-form" }))
                    {
                        <div class="input-group">
                            @if (searchQuery != null)
                            {
                                <input type="text" class="form-control search-box" placeholder="Search podcasts..." name="q" value=@searchQuery>
                            }
                            else
                            {
                                <input type="text" class="form-control search-box" placeholder="Search podcasts..." name="q">
                            }
                            <div class="input-group-btn">
                                <button class="btn btn-default search-btn" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    }
                </div>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
    @Html.Partial("_Footer")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

@{
    string searchQuery = ViewBag.SearchQuery;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Dev Podcasts</title>
    @Styles.Render("~/Content/css")
    <link href="~/Content/Site.css" rel="stylesheet" /> @*TODO - this stylesheet isn't working from BundleConfig? *@
    @Scripts.Render("~/bundles/modernizr")

    <link rel="shortcut icon" href="~/favicon.png" type="image/png">
    <link rel="icon" href="~/favicon.png" type="image/png">
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Dev Podcasts", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", title = "Home page" })
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Find <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Podcasts", "Index", "Podcast")</li>
                            <li>@Html.ActionLink("Episodes", "Index", "Episode")</li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Submit a podcast", "Submit", "Podcast")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
                <div class="col-sm-3 col-md-3 navbar-right">
                    @using (Html.BeginForm("Index", "Search", FormMethod.Get, new { @class="navbar-form"} ))
                    {
                        <div class="input-group">
                            @if (searchQuery != null)
                            {
                                <input type="text" class="form-control" placeholder="Search podcasts..." name="q" value=@searchQuery>
                            }
                            else
                            {
                                <input type="text" class="form-control" placeholder="Search podcasts..." name="q">    
                            }
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    }
                </div>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer></footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
